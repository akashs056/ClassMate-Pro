<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".Activities.ClassRoomActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_dashboard_bg" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko_bold"
        android:text="Update Progress"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="20dp"
                android:layout_marginTop="16dp"
                android:elevation="3dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/user"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/studentname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/amiko"
                        android:text="Student Name"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.487" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="20dp"
                android:elevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView

                        android:id="@+id/iv1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/star"
                        android:padding="5dp"
                        android:background="@drawable/order_detail"/>
                    <View
                        android:id="@+id/view1"
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="#6B6464"/>
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/star"
                        android:padding="5dp"
                        android:background="@drawable/order_detail"/>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="#6B6464"/>
                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/star"
                        android:padding="5dp"
                        android:background="@drawable/order_detail"/>
                    <View
                        android:id="@+id/view3"
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="#6B6464"/>
                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/star"
                        android:padding="5dp"
                        android:background="@drawable/order_detail"/>
                    <View
                        android:id="@+id/view4"
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="#6B6464"/>
                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/star"
                        android:padding="5dp"
                        android:background="@drawable/order_detail"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/sem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Semester 1 : "
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintStart_toStartOf="@id/cardView"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/editTextSem1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:inputType="numberDecimal"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/sem1"
                app:layout_constraintStart_toEndOf="@id/sem1"
                app:layout_constraintTop_toTopOf="@id/sem1"
                app:layout_constraintVertical_bias="0.333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:background="@drawable/pass_fail_bg"
                app:layout_constraintTop_toTopOf="@id/sem1"
                app:layout_constraintBottom_toBottomOf="@id/sem1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/sem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="32dp"
                android:text=" Semester 2 : "
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/sem1"
                app:layout_constraintTop_toBottomOf="@id/txt15" />

            <TextView
                android:id="@+id/editTextSem2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="124dp"
                android:inputType="numberDecimal"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/sem2"
                app:layout_constraintStart_toEndOf="@id/sem2"
                app:layout_constraintTop_toTopOf="@id/sem2"
                app:layout_constraintVertical_bias="0.333" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/pass_fail_bg"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp"
                android:text="P"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/sem2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/sem2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/weak"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/weak_bg"
                android:text="WEAK"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView12"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sem2"
                app:layout_constraintTop_toBottomOf="@+id/txt18"
                app:layout_constraintVertical_bias="0.487" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/strong"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/green_btn_bg"
                android:text="Strong"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView12"
                app:layout_constraintHorizontal_bias="0.888"
                app:layout_constraintStart_toStartOf="@+id/sem2"
                app:layout_constraintTop_toBottomOf="@+id/txt18"
                app:layout_constraintVertical_bias="0.487" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Physics : "
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/sem1"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="@+id/sem1"
                app:layout_constraintTop_toBottomOf="@+id/sem1" />

            <TextView
                android:id="@+id/edphy"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:inputType="numberDecimal"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView13"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/textView13"
                app:layout_constraintVertical_bias="0.619" />

            <TextView
                android:id="@+id/txt14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathmetics"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/textView13"
                app:layout_constraintStart_toStartOf="@id/textView13"
                android:layout_marginTop="28dp"/>

            <TextView
                android:id="@+id/edmath"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:inputType="numberDecimal"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/txt14"
                app:layout_constraintStart_toEndOf="@+id/txt14"
                app:layout_constraintTop_toTopOf="@+id/txt14"
                app:layout_constraintVertical_bias="0.619" />


            <TextView
                android:id="@+id/txt15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txt14"
                app:layout_constraintStart_toStartOf="@id/txt14"
                android:layout_marginTop="28dp"/>

            <TextView
                android:id="@+id/edJava"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:inputType="numberDecimal"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/txt15"
                app:layout_constraintStart_toEndOf="@+id/txt15"
                app:layout_constraintTop_toTopOf="@+id/txt15" />


            <TextView
                android:id="@+id/txt16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Python"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/sem2"
                app:layout_constraintStart_toStartOf="@id/sem2"
                app:layout_constraintTop_toBottomOf="@id/sem2" />

            <TextView
                android:id="@+id/edpython"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:inputType="numberDecimal"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/txt16"
                app:layout_constraintStart_toEndOf="@+id/txt16"
                app:layout_constraintTop_toTopOf="@+id/txt16" />


            <TextView
                android:id="@+id/txt17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DBMS"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txt16"
                app:layout_constraintStart_toStartOf="@id/txt16"
                android:layout_marginTop="28dp"/>


            <TextView
                android:id="@+id/eddbms"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="116dp"
                android:inputType="numberDecimal"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/txt17"
                app:layout_constraintStart_toEndOf="@+id/txt17"
                app:layout_constraintTop_toTopOf="@+id/txt17"
                app:layout_constraintVertical_bias="0.555" />

            <TextView
                android:id="@+id/txt18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Microprocessor"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txt17"
                app:layout_constraintStart_toStartOf="@id/txt17"
                android:layout_marginTop="28dp"/>

            <TextView
                android:id="@+id/edmpp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:inputType="numberDecimal"
                android:textColor="@color/green"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/txt18"
                app:layout_constraintStart_toEndOf="@+id/txt18"
                app:layout_constraintTop_toTopOf="@+id/txt18"
                app:layout_constraintVertical_bias="1.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>